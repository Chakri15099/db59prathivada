extends layout

block content
  h1= title
  p Welcome to the bats pug
  div(class="container-fluid")
        div(class="row")
        -let bats  = results
        - let destinationcreate = `dispatchCreate(\"/bat/create\")`
         button.btn( class="btn-success ml-1", onclick= destinationcreate) Create

 
            div(class="container-fluid") 
                div(class="row m-1") 
                each item in bats  
                 - let destination = `dispatch(\"/bat/update?id=${item._id}\")`
                 - let destinationdetail = `dispatch(\"/bat/detail?id=${item._id}\")`
                 - let destinationdelete = `dispatchDelete(\"/bat/delete?id=${item._id}\")` 
                 div(class="row-sm-2", class="m-1") Item #{item.brand}(#{item.types}) is #{item.cost} 
                 button.btn( class="btn-primary ml-1", onclick= destination) Update 
                 button.btn( class="btn-primary ml-1", onclick= destinationdetail) Detail
                 button.btn( class="btn-primary ml-1", onclick= destinationdelete) Delete
                script.                
                    function buy(product)
                    {
                        alert(`You Purchased Item ${product+1}`)
                    }         

                script. 
                    function dispatch(path){ 
                    window.location.href=path 
                    } 
                    function dispatchCreate(path){   
                    window.location.href=path
                    }
                    function dispatchDelete(path){
                    window.location.href=path
                    }   
                  