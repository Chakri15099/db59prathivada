extends layout

block content
  h1= title
  p Welcome to the bats pug
  div(class="container-fluid")
        div(class="row")
            -
                let bats  = results
            div(class="container-fluid") 
                div(class="row m-1") 
                each item in bats  
                 - let destination = `dispatch(\"/bat/update?id=${item._id}\")` 
                 div(class="row-sm-2", class="m-1") Item #{item.brand}(#{item.types}) is #{item.cost} 
                     button.btn( class="btn-primary ml-1", onclick= destination) Update 

                script.                
                    function buy(product)
                    {
                        alert(`You Purchased Item ${product+1}`)
                    }         

                script. 
                    function dispatch(path)
                    { 
                        window.location.href=path 
                    } 
                  