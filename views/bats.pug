extends layout

block content
  h1= title
  p Welcome to the bats pug
  div(class="container-fluid")
        div(class="row")
            -
                let bats  = results
                
            each c,index in bats
            
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.types}
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.cost}
  script.                
    function buy(product)
    {
        alert(`You Purchased Item ${product+1}`)
    }         